@model HireFire.Core.Entity.Buyer
@{
    ViewBag.Title = "SignUP";

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>HireFire | Sign Up</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Contents/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Contents/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Contents/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Contents/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Contents/plugins/iCheck/square/blue.css">
    <link rel="stylesheet" href="~/Contents/dist/css/skins/_all-skins.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body>
    <div width="50%" class="hold-transition skin-blue layout-top-nav">
        <div class="wrapper">

            <header class="main-header">
                <nav class="navbar navbar-fixed-top">
                    <div class="container">
                        <div class="navbar-header">
                            <a href="HomeWithOutSign_In"><img width="100" height="45" src="~/Contents/Image/logo.png"></a>
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                                <i class="fa fa-bars"></i>
                            </button>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse pull-left" id="navbar-collapse">


                        </div>
                        <!-- /.navbar-collapse -->
                        <!-- Navbar Right Menu -->
                        <div class="navbar-custom-menu">
                            <form class="form-inline">
                                <div class="form-group">
                                    <!-- <button type="getnow" name="Get Now" class="btn btn-primary btn-lg" required="required">Sign In</button> -->
                                    <button type="button" name="Get Now" class="btn btn-primary btn-lg" required="required" onclick="location.href='SignIn';">Sign In</button>
                                </div>

                            </form>
                        </div>

                        <!-- /.navbar-custom-menu -->
                    </div>
                    <!-- /.container-fluid -->
                </nav>
            </header>

        </div>

        <div style="padding: 20px" class="hold-transition login-page">
            <div class="login-box">
                <div class="login-logo">
                    <a href="PublicHome"><b>Hire</b>Fire</a>
                </div>
                <!-- /.login-logo -->
                <div class="login-box-body">
                    <p class="login-box-msg">Sign in to start your session</p>

                    @*<form action="BuyerProfile1" method="post">*@
                    @using (Html.BeginForm()) { 

                        <div class="form-group">
                            @Html.LabelFor(model=>model.UserName)
                            @*<label for="exampleInputEmail1">User Name</label>*@
                            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Choose a unique user name" } })
                            @*<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Choose a unique user name">*@
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Name)
                            @*<label for="exampleInputEmail1">Name</label>*@
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your Name" } })
                            @*<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter your Name">*@
                        </div>

                        <div class="form-group has-feedback">
                            @Html.LabelFor(model => model.Email)
                            @*<label for="exampleInputEmail1">Email</label>*@
                            <input type="email" class="form-control" placeholder="Email">
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        </div>



                        <div class="form-group has-feedback">
                            @Html.LabelFor(model => model.P)
                            @*<label for="exampleInputEmail1">Password</label>*@
                            <input type="password" class="form-control" placeholder="Password">
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>

                        <div class="form-group has-feedback">
                            <label for="exampleInputEmail1">Re-Type Password</label>
                            <input type="password" class="form-control" placeholder="Password">
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Language</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Write expertize languages separated by comma">
                        </div>


                        <div class="row">
                            <div class="col-xs-8">
                                <div class="checkbox icheck">
                                    <label>
                                        <input type="checkbox"> Remember Me
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-xs-4">
                                <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
                            </div>
                            <!-- /.col -->
                        </div>
                        }
                    @*</form>*@



                    <!-- /.social-auth-links -->
                    Already have account?
                    <a href="SignIN">Sign In</a><br>


                </div>
                <!-- /.login-box-body -->
            </div>
            <!-- /.login-box -->
        </div>
    </div>

    <hr style="margin-bottom: 0em;margin-top: 0em;color: black;background-color: black;height: 5px">

    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">
            <b>Version</b> 2.0
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2018 <a href="HomeWithOutSign_In">HireFire</a>.</strong> All rights reserved.
    </footer>


    <div id="promotion"></div>

    <!-- jQuery 3 -->
    <script src="~/Contents/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Contents/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Contents/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
    <script>
        function promotion() {
            document.getElementById("promotion").innerHTML = "" +
            "<div class='modal modal-info fade in' id='modal-info' style='display: block; padding-right: 17px;'>" +
              "<div class='modal-dialog'>" +
                "<div class='modal-content'>" +
                  "<div class='modal-header'>" +
                    "<button type='button' class='close' data-dismiss='modal' aria-label='Close'>" +
                      "<span aria-hidden='true' onclick='hide()'>×</span></button>" +
                    "<h4 class='modal-title'>Promotions</h4>" +
                  "</div>" +
                  "<div class='modal-body'>" +
                    "<p>You have no promotion<br/></p>" +
                    "<p><input placeholder='Promo Code' style='color:black'</p>" +
                  "</div>" +
                  "<div class='modal-footer'>" +
                    "<button type='button' class='btn btn-outline pull-left' data-dismiss='modal' onclick='hide()'>Close</button>" +
                    "<button type='button' class='btn btn-outline'  onclick='add()'>Add</button>" +
                  "</div>" +
                "</div>" +
                "<!-- /.modal-content -->" +
              "</div>" +
              "<!-- /.modal-dialog -->" +
            "</div>";
        }

        function hide() {
            document.getElementById("promotion").innerHTML = "";
        }

        function add() {
            document.getElementById("promotion").innerHTML = "";
        }

    </script>

</body>
</html>
