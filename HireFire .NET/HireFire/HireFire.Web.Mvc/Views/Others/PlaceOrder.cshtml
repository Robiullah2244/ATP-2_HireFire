
@{
   
    Layout = "~/Views/Others/_Layout.Others.cshtml";
}
@section head{
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>HireFire | Invoice</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Contents/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Contents/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Contents/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Contents/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
        folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/Contents/dist/css/skins/_all-skins.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

    <script>var accountName="Rocket"</script>


    <script>

    function validate()
    {
        isValid=true;
        if(!validateAccount())
        {
            isValid=false;
        }

        if (!validatePin())
        {
            isValid=false;
        }
        if (isValid)
        {
            var x = document.getElementById("f");
            x.setAttribute("action", "PlaceOrder?bankName=" + accountName+"&gigId="+@ViewBag.gigId);
        }
        return isValid;
    }
    function validateAccount()
    {
        var isValid=true;
        var account = document.getElementById("account").value;

        var accountErrorMessege=document.getElementById("accountErrorMessege");
        accountErrorMessege.style.color="red";

        var j=0;
        for(var i=0;i<account.length;i++)
        {
            if(account[i]==" ")
            {
                j++;
            }
        }
        if(account=="")
        {
            accountErrorMessege.innerHTML="*account can not be empty";
            isValid=false;
        }
        else if(account=="Enter text here...")
        {
            accountErrorMessege.innerHTML="*account can not be empty";
            isValid=false;
        }
        else if(i==j)
        {
            accountErrorMessege.innerHTML="*account can not contains only space";
            isValid=false;
        }
        else
        {
            accountErrorMessege.innerHTML="";
        }
        return isValid;
    }




    function validatePin() {
        var isValid = true;
        var pin = document.getElementById("pin").value;

        var pinErrorMessege = document.getElementById("pinErrorMessege");
        pinErrorMessege.style.color = "red";

        var j = 0;
        for (var i = 0; i < pin.length; i++) {
            if (pin[i] == " ") {
                j++;
            }
        }
        if (pin == "") {
            pinErrorMessege.innerHTML = "*pin can not be empty";
            isValid = false;
        }
        else if (pin == "Enter text here...") {
            pinErrorMessege.innerHTML = "*pin can not be empty";
            isValid = false;
        }
        else if (i == j) {
            pinErrorMessege.innerHTML = "*pin can not contains only space";
            isValid = false;
        }
        else {
            pinErrorMessege.innerHTML = "";
        }
        return isValid;
    }

</script>


   

    </head>
    }

<br/><br /><br />
<section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="page-header">
                        <i class="fa fa-globe"></i> HireFire
                        <small class="pull-right">Date: @DateTime.Now</small>
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    <b>Seller Details</b><br/>

                    <b>Name: </b> @ViewBag.Name<br>
                    <b>Level: </b> Level <B>@ViewBag.Level</B> seller<br>


                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">

                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <b>Invoice #007612</b><br>
                    <br>
                    <b>Order ID:</b> @ViewBag.OrderNumber<br>
                    <b>Account:</b> HireFire-968-34567
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th>Gig Title</th>
                                <th>Order Id</th>
                                <th>Category</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>

                                <td>@ViewBag.Title</td>
                                <td>@ViewBag.OrderNumber</td>
                                <td>@ViewBag.Category</td>
                                <td>@ViewBag.Price BDT</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->


            <div class="row">
                <!-- /.col -->
                <div class="col-xs-5">
                    <p class="lead"></p>

                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th style="width:50%">Subtotal:</th>
                                    <td>@ViewBag.Price BDT</td>
                                </tr>

                                <tr>
                                    <th>Processing Fee:</th>
                                    <td>@ViewBag.ProcessingFee BDT</td>
                                </tr>
                                <tr>
                                    <th>Total:</th>
                                    <td><b>@ViewBag.TotalFee BDT</b></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.col -->
                <!-- Blank column -->
                <div class="col-xs-2">
                </div>


                <!-- /.col -->
                <div class="col-xs-5">
                    <p class="lead">Payment Methods:</p>
                    <img width="70" height="50" src="~/Contents/Image/Other/Rocket.jpg" style="cursor: pointer" onclick="Rocket()" alt="Rocket">
                    <img width="70" height="50" src="~/Contents/Image/Other/bKash.jpg" style="cursor: pointer" onclick="bKash()" alt="bKash">
                    <img width="70" height="60" src="~/Contents/Image/Other/ukash.png" style="cursor: pointer" onclick="uKash()" alt="uKash">
                    <img width="70" height="50" src="~/Contents/Image/Other/Ific.jpg" style="cursor: pointer" onclick="Ific()" alt="Ifif">
                    <br/>

                    <div id="RocketArea" style="margin-left:0px;margin-right:435px"><hr style='background-color: BLUE;height: 5px'> </div>
                    <div id="bKashArea" style="margin-left:75px;margin-right:365px"></div>
                    <div id="uKashArea" style="margin-left:150px;margin-right:290px"></div>
                    <div id="IficArea" style="margin-left:225px;margin-right:225px"></div>

                    <br/>

                    <div>

                        <div class="box box-info">
                            <div class="box-header with-border">

                            </div>
                            <!-- /.box-header -->
                            <!-- form start -->
                            <form class="form-horizontal">
                                <div class="box-body">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Account No</label>

                                        <div class="col-sm-10">
                                            <input class="form-control" placeholder="Account No" name="account" id="account" onchange="validateAccount()">
                                            <span id="accountErrorMessege"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Pin</label>

                                        <div class="col-sm-10">
                                            <input type="password" class="form-control" placeholder="Pin" id="pin" onchange="validatePin()">
                                            <span id="pinErrorMessege"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">

                                        </div>
                                    </div>
                                </div>
                                <!-- /.box-footer -->
                            </form>
                        </div>

                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->


    

    
    <form method="post" action="" id="f" onsubmit="return validate()">
        <!-- this row will not appear when printing -->
        <div class=" row no-print">
            <div class="col-xs-12">
                <a href="invoice-print" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Print</a>
                <button type="submit" class="btn btn-success pull-right">
                    <i class="fa fa-credit-card"></i> Submit Payment
                </button>

            </div>
        </div>
    </form>
        </section>


        @section Javascript{

        <script>
           
            
