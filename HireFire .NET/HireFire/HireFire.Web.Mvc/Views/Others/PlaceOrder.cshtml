	    document.getElementById("RocketArea").innerHTML="<hr style='background-color: BLUE;height: 5px'>";
	    document.getElementById("bKashArea").innerHTML="";
	    document.getElementById("uKashArea").innerHTML="";
	    document.getElementById("IficArea").innerHTML = "";
	    accountName = "Rocket";
	    
	}

