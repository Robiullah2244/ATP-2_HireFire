        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">
                                <b>
                                    Last Month Income<br /><br />
                                    <select onchange="myFunction()" id="selectedOption">
                                        <option>Graphical View</option>
                                        <option> Detail View</option>
                                    </select>
                                </b>
                            </h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="row">
                            <div class="col-md-12">
