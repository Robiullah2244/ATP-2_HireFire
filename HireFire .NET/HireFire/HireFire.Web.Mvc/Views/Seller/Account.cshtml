    ViewBag.Title = "Account";
    Layout = "_Layout.Dashboard.cshtml";
}

@section head{

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>HireFire | Pending Task</title>
    <!-- Tell the browser to be responsive to screen width -->
