}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!--
        <section class="content-header">
          <iframe name="contentFrame" frameborder="0" width="100%" height="475" src="gigs.html"></iframe>

        </section>
    -->
    <!-- Main content -->
    <section class="content container-fluid">

        <!--------------------------
          | Your Page Content Here |
          -------------------------->
        <div class="row">
            <div class="col-xs-12">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"><b>Account Statement</b></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Date(yyyy-mm-dd)</th>
                                    <th>From</th>
                                    <th>Transaction Type</th>
                                    <th>Amount</th>
                                    <th>Order Id</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var t in ViewBag.transaction)
                                {
                                    <tr>
                                        <td>@t.Date</td>
                                        <td>@t.BuyerName</td>
                                        @if(t.WithdrawAmount>0)
                                        {
                                            <td>Withdraw</td>
                                        }
                                        else
                                        {
                                        <td>Deposit</td>
                                        }

                                        @if (t.WithdrawAmount > 0)
                                        {
                                            <td>@t.WithdrawAmount</td>
                                        }
                                        else
                                        {
                                            <td>@t.SellerEarned</td>
                                        }
                                        

                                        @if (t.WithdrawAmount > 0)
                                        {
                                            <td>NILL</td>
                                        }
                                        else
                                        {
                                            <td>@t.OrderId</td>
                                        }
                                        
                                    </tr>
                                }
                            

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Date(yyyy-mm-dd)</th>
                                    <th>From</th>
                                    <th>Transaction Type</th>
                                    <th>Amount</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- Main Footer -->








