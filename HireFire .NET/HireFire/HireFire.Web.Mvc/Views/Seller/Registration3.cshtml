<!-- Content Wrapper. Contains page content -->



<div style="background-color: #f2f2f2; font-family:times-new-roman">

    <div style="margin-left:20%;margin-right:20%">
        <br />

        <form method="POST" enctype="multipart/form-data" action="SellerProfile.html">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add your availability and location</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->

                <div class="box-body">

                    <div class="form-group">
                        <label>How many hours availabile do you have available for work in a week?</label>
                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="1" aria-hidden="true">
                            <option selected="selected">8 hours</option>
                            <option>Bellow 12 hours</option>
                            <option>12 hours</option>
                            <option>16 hours</option>
                            <option>20 hours</option>
                            <option>24 hours</option>
                            <option>28 hours</option>
                            <option>32 hours</option>
                            <option>Above 32 hours</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>District</label>
                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" tabindex="1" aria-hidden="true">
                            <option selected="selected">Comilla</option>
                            <option>Dhaka</option>
                            <option>Chittagong</option>
                            <option>Rajshahi</option>
                            <option>Noyakhali</option>
                            <option>Khulna</option>
                            <option>Bagura</option>
                        </select>
                    </div>

                    <div class="form-group">

                        <div class="form-group">
                            <label for="exampleInputPassword1">Address</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="">
                        </div>

                    </div>

                    <div class="form-group">

                        <div class="form-group">
                            <label for="exampleInputPassword1">Postal Code</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Digit and minimum 4 digit">
                        </div>

                    </div>
                    <div class="form-group">

                        <div class="form-group">
                            <label for="exampleInputPassword1">Phone Number</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Digit and must be 11 digit">
                        </div>

                    </div>

                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save and Continue</button>
                </div>
            </div>
        </form>
    </div>

