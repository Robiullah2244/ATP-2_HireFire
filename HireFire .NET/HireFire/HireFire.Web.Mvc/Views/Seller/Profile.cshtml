@{
    ViewBag.Title = "Profile";
    Layout = "_Layout.Profile.cshtml";
}


@section head{
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>HireFire | Seller Profile</title>
        <link rel="shortcut icon" href="~/Contents/Image/logo.png" type="image/png" />

        <!-- Tell the browser to be responsive to screen width -->
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <!-- Bootstrap 3.3.7 -->
        <link rel="stylesheet" href="~/Contents/bower_components/bootstrap/dist/css/bootstrap.min.css">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="~/Contents/bower_components/font-awesome/css/font-awesome.min.css">
        <!-- Ionicons -->
        <link rel="stylesheet" href="~/Contents/bower_components/Ionicons/css/ionicons.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="~/Contents/dist/css/AdminLTE.min.css">
        <!-- AdminLTE Skins. Choose a skin from the css/skins
             folder instead of downloading all of them to reduce the load. -->
        <link rel="stylesheet" href="~/Contents/dist/css/skins/_all-skins.min.css">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        <!-- Google Font -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
        <style>
            .img {
                border: 1px solid #ddd;
                border-radius: 10px;
                padding: 10px;
                margin: 3px;
                width: 300px;
                height: 170px;
            }
        </style>
        <script>

            //function AddLanguage()
            //{
            //    document.getElementById("language").innerHTML='<td colspan="4" class="form-group"><label for="name">New Language </label><input class="form-control" id="newLanguage" type="text" value="Type your Language"> <button onclick="AddLanguageinpanel()"><font size="3">Submit</font></button></td>';
            //}
            function AddLanguage() {
                document.getElementById("language").innerHTML = '<td colspan="5" class="form-group">' +
                    '<form action="/Seller/AddLanguage" method="post"><input class="form-control" id="newLanguage" ' +
                    'name="newLanguage" type="text" placeholder="Type your New Language">' +
                    '<font size="3"><input type="submit" value="Submit"/>&nbsp;' +
                    '<button onclick="LanguagePanelHide()"><font size="3"> Close</font></button></font></form></td>';

            }
            function AddSkill() {
                document.getElementById("skill").innerHTML = '<td colspan="5" class="form-group">' +
                    '<form action="/Seller/AddSkill" method="post"><input class="form-control" id="newSkill" ' +
                    'name="newSkill" type="text" placeholder="Type your New Skill">' +
                    '<font size="3"><input type="submit" value="Submit"/>&nbsp;' +
                    '<button onclick="SkillPanelHide()"><font size="3"> Close</font></button></font></form></td>';

            }
            function LanguagePanelHide() {
                document.getElementById("language").innerHTML = "";
            }
            function SkillPanelHide() {
                document.getElementById("skill").innerHTML = "";
            }
            function Adddescription() {
                document.getElementById("textboxpanel").innerHTML = '<td colspan="5" class="form-group"><textarea class="form-control" id="adddescriptionpanle">' + document.getElementById("textboxpanelLoder").innerHTML + '</textarea><button onclick="Adddescriptioninpanel()"><font size="3">Edit</font></button></td>';

            }
            function Adddescriptioninpanel() {

                //document.getElementById("textboxpanelLoder").innerHTML = document.getElementById("adddescriptionpanle").value;
                var x = document.getElementById("adddescriptionpanle").value;
                window.location.href = '/seller/EditDescription?EditedDescription=' + x;
                document.getElementById("textboxpanel").innerHTML = "";
            }
            //function Addskill() {
            //    document.getElementById("skill").innerHTML = '<td colspan="4" class="form-group"><label for="name">New Language </label><input class="form-control" id="skillinpanel" type="text" value="Type your Skill"> <button onclick="Addskillonpanel()"><font size="3">Submit</font></button></td>';

            //    //document.getElementById("skillpanel").innerHTML = '<td colspan="4" class="form-group"><textarea class="form-control" id="skillinpanel">' + document.getElementById("SkillLoder").innerHTML + '</textarea><button onclick="Addskillonpanel()"><font size="3">Edit</font></button></td>';

            //}
            function Addskillonpanel() {

                document.getElementById("SkillLoder").innerHTML = document.getElementById("skillinpanel").value;
                document.getElementById("skillpanel").innerHTML = "";
            }
        </script>
    </head>

}
<!-- =============================================== -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content">
        <table border="0">


            <tr height="600">
                <td width="1%"></td>
                <td valign="top" align="center" width="20%">
                    <img src="~/Contents/Image/User/b.png" width="30%" alt="TANIM" />
                    <br />@ViewBag.User.Name<hr />

                    <table width="100%">

                        <tr align="center">
                            <td colspan="5">
                                <button><font size="3"><a href="/Buyer/Profile">View as Buyer</a></font></button>
                            </td>
                        </tr>

                        <tr>
                            <td width="5%"><img src="~/Contents/Image/Other/location.png" /></td>
                            <td width="40%">Form</td>
                            <td align="right" colspan="3">Bangladesh</td>
                        </tr>
                        <tr>
                            <td width="5%"><img src="~/Contents/Image/User/member1.png" /></td>
                            <td>Member since</td>
                            <td align="right" colspan="3">@ViewBag.User.JoiningDate.ToString("MMMM") @ViewBag.User.JoiningDate.ToString("yyyy")</td>
                        </tr>

                        @*<tr>
                            <td width="5%"><img src="~/Contents/Image/Other/time.png" /></td>
                            <td>Average Response</td>
                            <td align="right" colspan="3">1Hrs.</td>
                        </tr>*@

                        <tr>
                            <td width="5%"><img src="~/Contents/Image/Other/delivery.png" /></td>
                            <td>Last Delivery</td>
                            <td align="right" colspan="3">
                                @if (@ViewBag.Transaction != null)
                                {
                                    <span>About </span><span>@ViewBag.Transaction.Date.ToString("MM")</span><span> months ago.</span>
                                }
                                else
                                {
                                    <span>Never Delivered</span>
                                }
                            </td>
                        </tr>

                        <tr height="40">
                            <td></td>
                        </tr>

                        <tr>
                            <td colspan="4"><font size="4"><b>Description</b></font></td>
                            <!--<td align="right">Edit Description</td>-->
                            <td align="right" class="dropdown tasks-menu">
                                <!-- Menu Toggle Button -->
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <span class="label label-danger" onclick="Adddescription()">Edit Description</span>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="5" id="textboxpanelLoder"> @ViewBag.User.Description</td>
                        </tr>
                        <tr id="textboxpanel"></tr>
                        <tr height="10">
                            <td colspan="3"><hr /></td>
                        </tr>

                        <tr>
                            <td colspan="4">
                                <font size="4"><b>Languages</font>
                            </td>
                            <td align="right" class="dropdown tasks-menu">
                                <!-- Menu Toggle Button -->
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <span class="label label-danger" onclick="AddLanguage()">ADD NEW</span>
                                </a>
                            </td>
                        </tr>

                        <tr>
                            <td colspan="4" id="language2">
                                @{
                                    foreach (var item in ViewBag.Language)
                                    {
                                        <li>@item.LanguageInfo</li>
                                    }
                                }

                            </td>
                        </tr>

                        <tr id="language">
                            <!--<td id="language"><td>-->
                        </tr>
                        <tr height="10">
                            <td colspan="3"><hr /></td>
                        </tr>

                        <tr>
                            <td colspan="4"><font size="4"><b>Skill's</b></font></td>
                            <!--<td align="right">Edit Description</td>-->
                            <td align="right" class="dropdown tasks-menu">
                                <!-- Menu Toggle Button -->
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <span class="label label-danger" onclick="AddSkill()">Add Skill's</span>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="5" id="SkillLoder">
                                @{
                                    foreach (var item in ViewBag.Skill)
                                    {
                                        <li>@item.SkillInfo</li>
                                    }
                                }
                            </td>
                        </tr>
                        <tr id="skill"></tr>

                        <tr height="10">
                            <td colspan="3"><hr /></td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <font size="4"><b>Linked accounts</font></b>
                                <ul>
                                    <li>Google</li>
                                    <li>Facebook</li>
                                    <li>Linkedin</li>
                                </ul>
                            </td>
                        </tr>
                    </table>

                </td>
                <td width="5%"></td>
                <td width="60%" valign="top">
                    <h1>Active Gigs	</h1><br /><br />
                    <table cellspacing="40">

                        <tr>
                            @{
                                int count = 0;
                                int i = 0;
                                foreach (var item in ViewBag.AllGig)
                                {

                                    <td width="20%">
                                        <img src="~/Contents/Image/Gig/@item.ImagePath" class="img"><br /><br />
                                        <a href="GigDetail.html?GigId=@item.Id">@item.Title</a>
                                    </td>
                                    count++;
                                    i++;
                                    if (count == 3)
                                    {

                                        count = 0;
                                    <tr />
                                    }
                                }
                                if (count < 3)
                                {
                                    <td>
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <img src="~/Contents/Image/Gig/addgig.png" /><br /><br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <a href="CreateGig.html"><button>Create a new gig</button></a>
                                    </td>
                        <tr/>
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            <img src="~/Contents/Image/Gig/addgig.png" /><br /><br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            <a href="CreateGig.html"><button>Create a new gig</button></a>
                                        </td>
                                    </tr>
                                }


                            }


                        </table>
                        </td>
                        </tr>

                        </table>
                    </section>
                </div>
                <!-- /.content-wrapper -->
                @section javascript{
                    <!-- ./wrapper -->
                    <!-- jQuery 3 -->
                    <script src="~/Contents/bower_components/jquery/dist/jquery.min.js"></script>
                    <!-- Bootstrap 3.3.7 -->
                    <script src="~/Contents/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
                    <!-- SlimScroll -->
                    <script src="~/Contents/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
                    <!-- FastClick -->
                    <script src="~/Contents/bower_components/fastclick/lib/fastclick.js"></script>
                    <!-- AdminLTE App -->
                    <script src="~/Contents/dist/js/adminlte.min.js"></script>
                    <!-- AdminLTE for demo purposes -->
                    <script src="~/Contents/dist/js/demo.js"></script>

                }
